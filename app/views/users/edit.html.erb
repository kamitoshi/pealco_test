<h1>プロフィール編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-box">
      <%= form_for(@user) do |f| %>
        <%= render 'layouts/error', object: @user %>
        <div class="field">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :self_introduction, "自己紹介文" %>
          <%= f.text_area :self_introduction, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :image, "プロフィール画像" %>
          <%= f.file_field :image %>
        </div>

        <div class="field">
          <p>カテゴリー</p>
          <%= f.collection_select :alc_category_id, AlcCategory.all, :id, :name, include_blank: true %>
        </div>

        <%= f.submit "プロフィール編集", class: "btn btn-primary" %>
      <% end %>
    </div>

    <%= link_to 'パスワード変更', edit_user_registration_path %>
  </div>
</div>
